<body>

<iframe src="http://ya.ru" name="allFrames" id="allFrames" width="640" height="480" scrolling="yes" frameborder="0" border="0">
</iframe> 

<script language="JavaScript" type="text/javascript">

w = window.innerWidth-50;  
h = window.innerHeight-400;
		myFrame = document.getElementById('allFrames');
		myFrame.setAttribute('height',h);
		myFrame.setAttribute('width',w);
</script>
